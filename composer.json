{
  "name": "sitegeist/bitzer",
  "type": "neos-package",
  "description": "A content lifecycle task manager for Neos CMS",
  "license": "MIT",
  "authors": [
    {
      "name": "Bernhard Schmitt",
      "email": "schmitt@sitegeist.de",
      "role": "Developer"
    }
  ],
  "require": {
    "neos/neos": "~5.0 || ^7.0 || dev-master",
    "neos/fusion": "~5.0 || ^7.0 || dev-master",
    "neos/content-repository": "~5.0 || ^7.0 || dev-master",
    "neos/fusion-afx": "~1.4 || ^7.0 || dev-master",
    "doctrine/dbal": "*",
    "doctrine/migrations": "*",
    "neos/content-repository-dimensionspace": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4",
    "phpstan/phpstan": "^0.12.82",
    "neos/buildessentials": "^6.3",
    "mikey179/vfsstream": "^1.6",
    "squizlabs/php_codesniffer": "^3.5",
    "jangregor/phpstan-prophecy": "^0.8.0",
    "spatie/phpunit-snapshot-assertions": "^4.2"
  },
  "config": {
    "vendor-dir": "Packages/Libraries",
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "Sitegeist\\Bitzer\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sitegeist\\Bitzer\\Tests\\": "Tests"
    }
  },
  "extra": {
    "neos": {
      "package-key": "Sitegeist.Bitzer"
    }
  }
}
